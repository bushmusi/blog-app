<main>
  <%= render partial: "users/user", locals: { item: @user }%>
  <% if current_user %>
      <%=link_to new_user_post_path do%>
        <button class="create-post">Create post</button>
      <%end%>
  <% end %>
  <% @posts.each do |post|%>
    <%= render partial: "post_detail", locals: { post: post} %>
  <% end %>
  <div class="pagination">
    <i>Prev</i>
    <i>1</i>
    <i>2</i>
    <i>3</i>
    <i>Next</i>
  </div>
</main>
